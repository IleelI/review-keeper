generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  hash         String
  username     String?
  refreshToken String?
  reviews      Review[]
}

model Review {
  id          String           @id @default(cuid())
  title       String
  content     String
  rating      Int?
  ratingScale Int?
  tags        ReviewTag[]
  reactions   ReviewReaction[]
  categoryId  String?
  category    ReviewCategory?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  authorId    String
  author      User             @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model ReviewReactionType {
  id     String           @id @default(cuid())
  name   String           @unique
  usedIn ReviewReaction[]
}

model ReviewReaction {
  id       Int                @id @default(autoincrement())
  typeId   String
  type     ReviewReactionType @relation(fields: [typeId], references: [id], onDelete: Cascade)
  reviewId String
  review   Review             @relation(fields: [reviewId], references: [id], onDelete: Cascade)
}

model ReviewCategory {
  id     String   @id @default(cuid())
  name   String   @unique
  usedIn Review[]
}

model ReviewTag {
  id     String   @id @default(cuid())
  name   String   @unique
  usedIn Review[]
}
