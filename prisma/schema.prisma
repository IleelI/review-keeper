generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  hash         String
  username     String?
  refreshToken String?
  reviews      Review[]
}

model Review {
  id          Int              @id @default(autoincrement())
  title       String
  content     String
  rating      Int?
  ratingScale Int?
  tags        ReviewTag[]
  reactions   ReviewReaction[]
  categoryId  Int?
  category    ReviewCategory?  @relation(fields: [categoryId], references: [id])
  authorId    Int
  author      User             @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model ReviewReactionType {
  id     Int              @id @default(autoincrement())
  name   String           @unique
  usedIn ReviewReaction[]
}

model ReviewReaction {
  id       Int                @id @default(autoincrement())
  typeId   Int                
  type     ReviewReactionType @relation(fields: [typeId], references: [id], onDelete: Cascade)
  reviewId Int
  review   Review             @relation(fields: [reviewId], references: [id], onDelete: Cascade)
}

model ReviewCategory {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  usedIn Review[]
}

model ReviewTag {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  usedIn Review[]
}
